<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/alert_cv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:elevation="10dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/alert_v"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:padding="10dp">

            <TextView
                android:id="@+id/alert_text1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="멘토님이 "
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/alert_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="과제명"
                android:textColor="@color/teal_700"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/alert_text1_tv"
                app:layout_constraintStart_toEndOf="@id/alert_text1_tv"/>

            <TextView
                android:id="@+id/alert_text2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="을 등록했습니다."
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginLeft="2dp"
                app:layout_constraintTop_toTopOf="@id/alert_name_tv"
                app:layout_constraintStart_toEndOf="@id/alert_name_tv"/>
            <TextView
                android:id="@+id/alert_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"                android:text="날짜"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/alert_text1_tv"
                app:layout_constraintStart_toStartOf="@id/alert_text1_tv"/>
            <TextView
                android:id="@+id/state_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제출 완료"
                android:textColor="@color/teal_700"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/slash_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text=":"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/state_tv"
                app:layout_constraintBottom_toBottomOf="@id/state_tv"
                app:layout_constraintEnd_toStartOf="@id/state_tv" />

            <TextView
                android:id="@+id/score_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="제출 현황"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/state_tv"
                app:layout_constraintEnd_toStartOf="@id/slash_tv" />

            <TextView
                android:id="@+id/alert_duration_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="~"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/alert_year_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="yy"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                app:layout_constraintTop_toTopOf="@id/alert_duration_tv"
                app:layout_constraintStart_toEndOf="@id/alert_duration_tv"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>